<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>My Favourite Recipes</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <%- include('partials/header') %>

        <div class="container mt-5">
            <h2 class="my-4">My Favourite Recipes</h2>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <% recipes.forEach(recipe=> { %>
                    <div class="col">
                        <div class="card h-100">
                            <a href="/recipesDetails/<%= recipe.recipeid %>">
                                <img src="/img/<%= recipe.images %>" class="card-img-top" alt="Recipe Image">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= recipe.titles %>
                                </h5>
                                <p class="card-text">
                                    <%= recipe.categories %>
                                </p>
                                <form action="/favourites/delete/<%= recipe.recipeid %>" method="POST"
                                    style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm custom-btn">Remove</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <a href="/" class="btn btn-primary mt-3">Back to Recipes</a>
        </div>
</body>

</html>