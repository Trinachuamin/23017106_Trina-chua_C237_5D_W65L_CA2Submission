<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Simple Recipe Book</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <%- include('partials/header') %>
        <!-- Hero Section -->
        <header class="header">
            <div class="overlay"></div>
            <div class="container text-center text-white">
                <h1 class="display-4">Simple Recipe Book</h1>
                <p class="lead">Welcome to Simple Recipe Book</p>
            </div>
        </header>

        <!-- Search Form -->
        <div class="container mt-5 text-center">
            <form class="search-bar" action="/search" method="GET">
                <input type="search" placeholder="Search..." aria-label="Search" name="query">

                <button type="submit">
                    <img src="/img/search.jpg" alt="Search">
                </button>
            </form>
        </div>

        <!-- Recipe Categories Section -->
        <main class="container mt-5">
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <% recipes.forEach(recipe=> { %>
                    <div class="col">
                        <div class="card h-100">
                            <a href="/recipesDetails/<%= recipe.recipeid %>">
                                <img src="/img/<%= recipe.images %>" class="card-img-top" alt="Recipe Image">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= recipe.titles %>
                                </h5>
                                <p class="card-text">
                                    <%= recipe.categories %>
                                </p>
                                <div class="d-flex justify-content-start align-items-center">
                                    <form action="/recipes/add/<%= recipe.recipeid %>" method="POST"
                                        style="margin-right: 8px;">
                                        <button type="submit" class="btn p-0">
                                            <img src="/img/plussign.jpg" alt="Add to favourites"
                                                style="width: 24px; height: 24px; cursor: pointer;">
                                        </button>
                                    </form>
                                    <a href="/comments/<%= recipe.recipeid %>" style="display: inline;">

                                        <img src="/img/comments.jpg" alt="Add Comments"
                                            style="width: 24px; height: 24px; cursor: pointer;">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </main>
        <br>
</body>

</html>